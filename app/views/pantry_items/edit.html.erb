<!-- Validation failure messages -->
<% if @pantry_item.errors.any? %>
  <% @pantry_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Pantry Item #<%= @pantry_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_pantry_item/<%= @pantry_item.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for food_id -->
      <div class="form-group">
        <label for="food_id" class="control-label">
          Food
        </label>

        <%= select_tag(:food_id, options_from_collection_for_select(Food.all, :id, :name, @pantry_item.food_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @pantry_item.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="control-label">
          Quantity
        </label>

        <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @pantry_item.quantity %>">
      </div>

      <button class="btn btn-warning">
        Update Pantry Item
      </button>
      or
      <a href="/pantry_items/<%= @pantry_item.id %>">Cancel</a>
    </form>
  </div>
</div>
